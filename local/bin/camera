#!/bin/bash

CDIR=`pwd`
DIR=`date +%Y_%m_%d`
if [[ ! -z "$1" ]]
then
	DIR="$1"
fi
WORK_DIR=$CDIR/$DIR


# echo "===>>> Creating Working Dir:" $WORK_DIR
mkdir $WORK_DIR

#
#
echo "===>>> Getting into working dir:" $WORK_DIR

cd $WORK_DIR

echo "===>>> Retrieving all files from camera here ..."
gphoto2 --get-all-files

