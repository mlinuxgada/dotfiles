#!/usr/bin/python2

import sys
import os

try:
    command = sys.argv[1]
except:
    print("===> No arguments set, pls choose start or stop!!!")
    sys.exit(0)

if command == 'start':
    print("===> Will start it")
    os.system("xrandr --output HDMI-1-0 --mode 1920x1080 --right-of eDP-1-0")
    print("===> Success ;-)")
elif command == 'stop':
    print("===> Will stop the program")
    os.system("xrandr --output HDMI-1-0 --off")
    print("===> Success ;-)")
else:
    print("===> Dont know what to do with command:" + command)
